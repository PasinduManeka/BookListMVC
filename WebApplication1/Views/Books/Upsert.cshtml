@model WebApplication1.Models.Book

<br />
<h1 class="text-info">@(Model.ID!=0 ? "Edit": "Create")Book</h1>
<br />

<div>
    <form method="post" asp-action="Upsert">
        @if (Model.ID != 0)
        {
            <!--Store the ID-->
            <input type="hidden" asp-for="ID" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <!--Name-->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
            </div>
            <!--To display the validation error-->
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <!--Author-->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Author" class="form-control" />
            </div>
            <!--To display the validation error-->
            <span class="text-danger" asp-validation-for="Author"></span>
        </div>
        <!--ISBN-->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="ISBN" class="form-control" />
            </div>
            <!--To display the validation error-->
            <span class="text-danger" asp-validation-for="ISBN"></span>
        </div>
        <!--Actions-->
        <div class="form-group row">
            <div class="col-3 offset-4">
                <button type="submit" class="btn btn-outline-primary form-control">@(Model.ID != 0?"Update":"Create")</button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-outline-success">Back to List</a>
            </div>
        </div>
    </form>
</div>

<!--Validation in the client side-->
<!--Use the validationscript-->
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}